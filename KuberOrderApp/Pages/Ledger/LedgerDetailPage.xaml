            <StackLayout
                Grid.Row="1"
                Orientation="Horizontal"
                HorizontalOptions="CenterAndExpand"
                Grid.ColumnSpan="2">
                <Frame
                    Padding="20,10"
                    BackgroundColor="White"
                    Style="{DynamicResource BlueBorderFrame}">
                    <Label
                        Text="{Binding PartyName}"
                        FontAttributes="Bold"
                        HorizontalOptions="CenterAndExpand"
                        HorizontalTextAlignment="Center"
                        Style="{DynamicResource CommonLabel}"
                        FontSize="Medium"
                        TextColor="Black"/>
                </Frame>
                <Frame
                    Padding="20,10"
                    BackgroundColor="White"
                    Style="{DynamicResource BlueBorderFrame}">
                    <Label
                        Text="{Binding OpeningBalance}"
                        FontAttributes="Bold"
                        HorizontalOptions="CenterAndExpand"
                        HorizontalTextAlignment="Center"
                        Style="{DynamicResource CommonLabel}"
                        FontSize="Medium"
                        TextColor="Black"/>
                </Frame>
            </StackLayout>

        </Grid>
        <StackLayout
            Padding="0,0,0,20"
            BackgroundColor="Transparent"
            VerticalOptions="FillAndExpand">
            <syncfusion:SfDataGrid
                x:Name="XmlDataGrid"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                AutoGenerateColumns="True"
                IsBusy="{Binding IsBusy, Mode=TwoWay}"
                LoadMoreCommand="{Binding LoadMoreCommand, Mode=TwoWay}"
                AllowLoadMore="True"
                LoadMoreText="{x:Static resource:TextString.LoadMoreData}"
                ItemsSource="{Binding DataTableCollection,Mode=TwoWay}"
                AllowResizingColumn="True"
                ColumnSizer="Star"
                GridTapped="TappedXmlGrid">
            </syncfusion:SfDataGrid>

            <StackLayout>
            <StackLayout
                Margin="10"
                HorizontalOptions="FillAndExpand"
                Orientation="Horizontal"
                BackgroundColor="{StaticResource PageBackgroundColor}">
                 <Label
                    Text="Closing Balance: "
                    FontAttributes="Bold"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="CenterAndExpand"
                     HorizontalTextAlignment="End"
                    MaxLines="1"
                    FontSize="Medium"
                    Style="{DynamicResource CommonLabel}" />
                <StackLayout
                    Margin="2"
                    Padding="10,0"
                    HorizontalOptions="End"
                    BackgroundColor="White">
                    <Label
                    Text="{Binding ClosingBalance}"
                    FontAttributes="Bold"
                    HorizontalOptions="End"
                    VerticalOptions="CenterAndExpand"
                    TextColor="Black"
                    MaxLines="1"
                    FontSize="Small"
                    Style="{DynamicResource CommonLabel}" />
                </StackLayout>
            </StackLayout>
        </StackLayout>
        </StackLayout>
    </StackLayout>
</ContentPage>
