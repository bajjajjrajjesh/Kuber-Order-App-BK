        </Grid>
        <StackLayout
            VerticalOptions="FillAndExpand">
            <syncfusion:SfDataGrid
                x:Name="XmlDataGrid"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                AutoGenerateColumns="True"
                IsBusy="{Binding IsBusy, Mode=TwoWay}"
                LoadMoreCommand="{Binding LoadMoreCommand, Mode=TwoWay}"
                AllowLoadMore="True"
                LoadMoreText="{x:Static resource:TextString.LoadMoreData}"
                ItemsSource="{Binding DataTableCollection,Mode=TwoWay}"
                SelectionMode="Single"
                AllowSwiping="True"
                AllowResizingColumn="True"
                ColumnSizer="Auto"
                GridTapped="TappedXmlGrid">
                <syncfusion:SfDataGrid.LeftSwipeTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout
                                HorizontalOptions="StartAndExpand"
                                Padding="10,0,0,0"
                                Orientation="Horizontal">
                                <Image
                                    VerticalOptions="Center"
                                    HeightRequest="30"
                                    WidthRequest="30"
                                    Source="ic_printer">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Tapped="TapGestureRecognizer_Print_Tapped"/>
                                    </Image.GestureRecognizers>
                                </Image>
                                <Image
                                    VerticalOptions="Center"
                                    WidthRequest="30"
                                    HeightRequest="30"
                                    Source="ic_share">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer
